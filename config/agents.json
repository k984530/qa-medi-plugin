{
  "agents": {
    "scenario-writer": {
      "name": "Scenario Writer",
      "skill": "/write-scenario",
      "skill_path": ".claude/skills/write-scenario/SKILL.md",
      "status": "active",
      "phase": 1,
      "style": "conservative",
      "triggers": ["시나리오 작성해줘", "Figma 보강해줘"],
      "tools": ["confluence-mcp", "figma-mcp", "chrome-extension"],
      "outputs": ["data/scenarios/", "data/reviews/figma_discrepancy_*.json"],
      "requires_approval": false,
      "chains_to": null,
      "notifies_on": ["figma_discrepancy"]
    },
    "tc-writer": {
      "name": "TC Writer",
      "skill": "/write-tc",
      "skill_path": ".claude/skills/write-tc/SKILL.md",
      "status": "active",
      "phase": 1,
      "style": "efficient",
      "triggers": ["TC 만들어줘", "TC 작성해줘"],
      "tools": ["google-sheets-mcp", "confluence-mcp"],
      "outputs": ["data/tc/"],
      "requires_approval": false,
      "chains_to": "format-checker"
    },
    "format-checker": {
      "name": "Format Checker",
      "skill": "/check-format",
      "skill_path": ".claude/skills/check-format/SKILL.md",
      "status": "active",
      "phase": 2,
      "style": "strict",
      "triggers": ["양식 검토해줘", "포맷 체크해줘"],
      "tools": ["filesystem"],
      "outputs": ["data/reviews/format_check_*.json"],
      "requires_approval": false,
      "chains_to": "content-reviewer",
      "chain_condition": "result === 'PASS'"
    },
    "content-reviewer": {
      "name": "Content Reviewer",
      "skill": "/review-tc",
      "skill_path": ".claude/skills/review-tc/SKILL.md",
      "status": "active",
      "phase": 2,
      "style": "analytical",
      "triggers": ["내용 리뷰해줘", "TC 리뷰해줘"],
      "tools": ["filesystem", "confluence-mcp"],
      "outputs": ["data/reviews/content_review_*.json"],
      "requires_approval": true,
      "approval_type": "산출물 확정",
      "chains_to": null,
      "notifies_on": ["review_complete"]
    },
    "automation-assessor": {
      "name": "Automation Assessor",
      "skill": "/assess-automation",
      "skill_path": ".claude/skills/assess-automation/SKILL.md",
      "status": "active",
      "phase": 3,
      "style": "analytical",
      "triggers": ["자동화 검토해줘", "자동화 사전 검토해줘"],
      "tools": ["filesystem"],
      "outputs": ["data/assessments/"],
      "requires_approval": true,
      "approval_type": "자동화 구현 여부",
      "chains_to": "test-coder",
      "chain_condition": "approved === true",
      "notifies_on": ["assessment_complete"]
    },
    "test-coder": {
      "name": "Test Coder",
      "skill": "/write-test-code",
      "skill_path": ".claude/skills/write-test-code/SKILL.md",
      "status": "active",
      "phase": 1,
      "style": "efficient",
      "triggers": ["테스트 코드 만들어줘", "자동화 코드 작성해줘"],
      "tools": ["filesystem", "playwright", "pytest"],
      "outputs": ["tests/", "data/test_results/"],
      "requires_approval": false,
      "chains_to": "fail-analyzer",
      "chain_condition": "fail_count > 0"
    },
    "fail-analyzer": {
      "name": "Fail Analyzer",
      "skill": "/analyze-fail",
      "skill_path": ".claude/skills/analyze-fail/SKILL.md",
      "status": "active",
      "phase": 3,
      "style": "analytical",
      "triggers": ["FAIL 분석해줘", "테스트 실패 원인 분석해줘"],
      "tools": ["filesystem"],
      "outputs": ["data/fail_analysis/"],
      "requires_approval": true,
      "approval_type": "FAIL 분석 결과 확인",
      "chains_to": null,
      "notifies_on": ["fail_analysis_complete", "real_bug_found"]
    },
    "reporter": {
      "name": "Reporter",
      "skill": "/upload-report",
      "skill_path": ".claude/skills/upload-report/SKILL.md",
      "status": "active",
      "phase": 1,
      "style": "efficient",
      "triggers": ["리포트 올려줘", "Confluence 업로드해줘"],
      "tools": ["confluence-api"],
      "outputs": ["confluence_page_url"],
      "requires_approval": false,
      "chains_to": "slack-notifier"
    },
    "slack-notifier": {
      "name": "Slack Notifier",
      "skill": "/share-slack",
      "skill_path": ".claude/skills/share-slack/SKILL.md",
      "status": "active",
      "phase": 1,
      "style": "efficient",
      "triggers": ["슬랙 공유해줘", "Slack 알림 보내줘"],
      "tools": ["slack-webhook"],
      "outputs": ["slack_message"],
      "requires_approval": false,
      "chains_to": null
    }
  },
  "chaining_presets": {
    "리뷰해줘": ["format-checker", "content-reviewer"],
    "시나리오부터 TC까지": ["scenario-writer", "tc-writer"],
    "테스트 돌리고 결과 공유": ["test-coder", "fail-analyzer", "reporter", "slack-notifier"],
    "전체 파이프라인": ["scenario-writer", "tc-writer", "format-checker", "content-reviewer", "test-coder", "reporter", "slack-notifier"]
  },
  "notification": {
    "method": "slack_dm",
    "channel": "#qa-agent-status",
    "events": [
      "figma_discrepancy",
      "review_complete",
      "assessment_complete",
      "fail_analysis_complete",
      "real_bug_found",
      "agent_error"
    ]
  }
}
